<%= form_for @entity do |form| %>
          <%= render 'devise/shared/error_messages', resource: @entity %>

          <div class="form-group mb-3">
            <div class="input-group input-group-merge input-group-alternative">
              <div class="input-group-prepend">
              </div>
              <%= form.text_field :name, autofocus: true, placeholder: 'Name of your Organization', class: 'form-control pl-2' %>
            </div>
          </div>

          <div class="form-group mb-3">
            <%= form.label :entity_type, 'Type of Entity' %>
            <%= form.collection_select :entity_type,
              Entity.entity_types.map { |type| [type.first.humanize.titleize, type.first] }, :second, :first, {}, { class: 'form-control' } %>
          </div>

          <div class="form-group mb-3">
            <%= form.email_field :email, placeholder: 'Email of your Organization', class: 'form-control pl-2' %>
          </div>

          <div class="text-center actions">
            <%= form.submit class: 'btn btn-primary my-4' %>
          </div>
        <% end %>

