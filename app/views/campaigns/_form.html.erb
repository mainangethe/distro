<%= form_for [@entity, @campaign]  do |form| %>
          <%= render 'devise/shared/error_messages', resource: @campaign %>

          <div class="form-group mb-3">
              <%= form.label :name, 'Title of your Campaign' %>
              <%= form.text_field :name, autofocus: true, placeholder: 'Ex. Food Drive Kibra 2020 - 1', class: 'form-control pl-2' %>
          </div>

          <div class="form-group mb-3">
            <%= form.label :campaign_type, 'Type of Campaign' %>
            <%= form.collection_select :campaign_type,
              Campaign.campaign_types.map { |type| [type.first.humanize.titleize, type.first] }, :second, :first, {}, { class: 'form-control' } %>
          </div>

          <div class="form-group mb-3">
            <%= form.label :check_level, 'Number of levels your list will be authorized' %>
            <%= form.collection_select :check_level,
              Campaign.check_levels.map { |level| [level.first.humanize.titleize, level.first] }, :second, :first, {}, { class: 'form-control' } %>
          </div>


          <% if action_name == 'edit' %>
            <div class="form-group mb-3">
              <%= form.label :status %>
              <%= form.collection_select :status,
                Campaign.statuses.map { |status| [status.first.humanize.titleize, status.first] },
                 :second, :first, { selected: @campaign.status }, { class: 'form-control' }
              %>
            </div>
          <% end %>

          <div class="text-center actions">
            <%= form.submit class: 'btn btn-primary my-4' %>
          </div>
        <% end %>

